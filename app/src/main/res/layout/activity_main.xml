<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0px"
    android:padding="0px"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="100px"
        android:text="@string/textResult"
        android:textAlignment="textEnd"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="250px"
        android:text="@string/textSubtend"
        android:textAlignment="textEnd"
        android:textSize="120px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/idC"
        android:layout_width="360px"
        android:layout_height="220px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="C"
        android:textSize="70px"
        app:layout_constraintStart_toEndOf="@+id/idCE"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/id1"
        android:layout_width="270px"
        android:layout_height="250px"
        android:text="1"
        android:textSize="70px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id4" />

    <Button
        android:id="@+id/id3"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="3"
        android:textSize="70px"
        app:layout_constraintStart_toEndOf="@+id/id2"
        app:layout_constraintTop_toBottomOf="@+id/id6" />

    <Button
        android:id="@+id/id7"
        android:layout_width="270px"
        android:layout_height="250px"
        android:text="7"
        android:textSize="70px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idCE" />

    <Button
        android:id="@+id/id9"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="9"
        android:textSize="70px"
        app:layout_constraintStart_toEndOf="@+id/id8"
        app:layout_constraintTop_toBottomOf="@+id/idDEL" />

    <Button
        android:id="@+id/idNhan"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="*"
        android:textSize="70px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id9"
        app:layout_constraintTop_toBottomOf="@+id/idDEL" />

    <Button
        android:id="@+id/idCham"
        android:layout_width="270px"
        android:layout_height="250px"
        android:layout_marginStart="1dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="."
        android:textSize="70px"
        app:layout_constraintStart_toEndOf="@+id/id0"
        app:layout_constraintTop_toBottomOf="@+id/id3" />

    <Button
        android:id="@+id/id2"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="2"
        android:textSize="70px"
        app:layout_constraintStart_toEndOf="@+id/id1"
        app:layout_constraintTop_toBottomOf="@+id/id5" />

    <Button
        android:id="@+id/id5"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="5"
        android:textSize="70px"
        app:layout_constraintStart_toEndOf="@+id/id4"
        app:layout_constraintTop_toBottomOf="@+id/id8" />

    <Button
        android:id="@+id/id8"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="8"
        android:textSize="70px"
        app:layout_constraintStart_toEndOf="@+id/id7"
        app:layout_constraintTop_toBottomOf="@+id/idC" />

    <Button
        android:id="@+id/id4"
        android:layout_width="270px"
        android:layout_height="250px"
        android:text="4"
        android:textSize="70px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id7" />

    <Button
        android:id="@+id/idCong"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="+"
        android:textSize="70px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id3"
        app:layout_constraintTop_toBottomOf="@+id/idTru" />

    <Button
        android:id="@+id/idCE"
        android:layout_width="360px"
        android:layout_height="220px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="CE"
        android:textSize="70px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/idTru"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="-"
        android:textSize="70px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id6"
        app:layout_constraintTop_toBottomOf="@+id/idNhan" />

    <Button
        android:id="@+id/id6"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="6"
        android:textSize="70px"
        app:layout_constraintStart_toEndOf="@+id/id5"
        app:layout_constraintTop_toBottomOf="@+id/id9" />

    <Button
        android:id="@+id/idDEL"
        android:layout_width="360px"
        android:layout_height="220px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="DEL"
        android:textSize="70px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idC"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/idResult"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="="
        android:textSize="70px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idCham"
        app:layout_constraintTop_toBottomOf="@+id/idCong" />

    <Button
        android:id="@+id/id0"
        android:layout_width="270px"
        android:layout_height="250px"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="0"
        android:textSize="70px"
        app:layout_constraintStart_toEndOf="@+id/idPheptinh"
        app:layout_constraintTop_toBottomOf="@+id/id2" />

    <Button
        android:id="@+id/idPheptinh"
        android:layout_width="270px"
        android:layout_height="250px"
        android:text="+/-"
        android:textSize="70px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id1" />


</androidx.constraintlayout.widget.ConstraintLayout>